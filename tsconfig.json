{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "~api/*": ["api/*"],
      "~components/*": ["components/*"],
      "~elements/*": ["elements/*"],
      "~hooks/*": ["hooks/*"],
      "~icons/*": ["icons/*"],
      "~modals/*": ["modals/*"],
      "~overlays/*": ["overlays/*"],
      "~pages/*": ["pages/*"],
      "~redux/*": ["redux/*"],
      "~routes/*": ["routes/*"],
      "~types/*": ["types/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
